{{!
    Item partial template

    To be rendered on the search page

    @template local_lor/partial_item
}}
<div class="local_lor_partial_item lor-card">
    <img src="{{{image}}}" />
    <div class="lor-card-body">
        <h4 class="lor-card-title">{{name}}</h4>
        <div class="lor-card-text">{{{description}}}</div>
        <a href="{{{view_url}}}" class="btn btn-primary">View</a>
    </div>
</div>
